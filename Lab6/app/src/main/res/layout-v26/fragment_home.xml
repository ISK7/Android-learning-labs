<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.example.lab6.Square
        android:id="@+id/firstSquare"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/red"
        android:tooltipText="@string/red"
        app:squareText="@string/red"
        app:squareColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        android:descendantFocusability="blocksDescendants"
        />
    <com.example.lab6.Square
        android:id="@+id/secondSquare"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blue"
        android:tooltipText="@string/blue"
        app:squareText="@string/blue"
        app:squareColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/firstSquare"/>
    <com.example.lab6.Square
        android:id="@+id/thirdSquare"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/green"
        app:squareText="@string/green"
        app:squareColor="@color/green"
        app:layout_constraintTop_toBottomOf="@id/secondSquare"/>
</androidx.constraintlayout.widget.ConstraintLayout>
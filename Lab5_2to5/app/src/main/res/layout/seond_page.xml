<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SecondPage">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        android:text="@string/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:id="@+id/text_view"
        app:layout_constraintBottom_toTopOf="@id/back_button"
        app:layout_constraintStart_toStartOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="@id/back_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data"
        android:id="@+id/data_view"
        app:layout_constraintBottom_toTopOf="@id/text_view"
        app:layout_constraintStart_toStartOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="@id/back_button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:id="@+id/time_view"
        app:layout_constraintBottom_toTopOf="@id/data_view"
        app:layout_constraintStart_toStartOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="@id/back_button"
        />
    <Button
        android:text="@string/text"
        android:id="@+id/text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/back_button"
        app:layout_constraintStart_toStartOf="@id/back_button"
        app:layout_constraintEnd_toEndOf="@id/back_button"
        />
    <Button
        android:text="@string/data"
        android:id="@+id/data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_button"
        app:layout_constraintStart_toStartOf="@id/text_button"
        app:layout_constraintEnd_toEndOf="@id/text_button"
        />
    <Button
        android:text="@string/time"
        android:id="@+id/time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/data_button"
        app:layout_constraintStart_toStartOf="@id/data_button"
        app:layout_constraintEnd_toEndOf="@id/data_button"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
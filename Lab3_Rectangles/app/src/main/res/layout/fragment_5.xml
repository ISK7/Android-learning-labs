<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.example.lab3_rectangles.Square
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/red_square"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:squareColor="@color/red"
            />
        <com.example.lab3_rectangles.Square
            android:layout_column="2"
            android:layout_row="0"
            android:id="@+id/green_square"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:squareColor="@color/green"
            />
        <com.example.lab3_rectangles.Square
            android:layout_column="4"
            android:layout_row="0"
            android:id="@+id/blue_square"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:squareColor="@color/blue"
            />
        <com.example.lab3_rectangles.Square
            android:layout_column="3"
            android:layout_row="1"
            android:layout_width="15pt"
            android:layout_height="15pt"
            app:squareColor="@color/white"
            />
        <com.example.lab3_rectangles.Square
            android:layout_column="1"
            android:layout_row="1"
            android:layout_width="15pt"
            android:layout_height="15pt"
            app:squareColor="@color/white"
            />
        <com.example.lab3_rectangles.Square
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/pink_square"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:squareColor="@color/pink"
            />
        <com.example.lab3_rectangles.Square
            android:layout_column="4"
            android:layout_row="2"
            android:id="@+id/black_square"
            android:layout_width="50pt"
            android:layout_height="50pt"
            app:squareColor="@color/black"
            />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
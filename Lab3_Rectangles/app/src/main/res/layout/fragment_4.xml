<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.GalleryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="180pt"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <com.example.lab3_rectangles.Square
                android:id="@+id/red_square"
                android:layout_width="50pt"
                android:layout_height="50pt"
                app:squareColor="@color/red"
                />

            <com.example.lab3_rectangles.Square
                android:id="@+id/green_square"
                android:layout_width="50pt"
                android:layout_height="50pt"
                app:squareColor="@color/green"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                />

            <com.example.lab3_rectangles.Square
                android:id="@+id/blue_square"
                android:layout_width="50pt"
                android:layout_height="50pt"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_alignParentEnd="true"
                app:squareColor="@color/blue" />
        </RelativeLayout>

        <com.example.lab3_rectangles.Square
            android:id="@+id/center_square"
            android:layout_width="1pt"
            android:layout_height="15pt"
            app:squareColor="@color/white" />
        <RelativeLayout
            android:layout_width="180pt"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <com.example.lab3_rectangles.Square
                android:id="@+id/pink_square"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_alignParentStart="true"
                app:squareColor="@color/pink" />

            <com.example.lab3_rectangles.Square
                android:id="@+id/black_square"
                android:layout_width="50pt"
                android:layout_height="50pt"
                android:layout_alignParentEnd="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:squareColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>